<div class="modal-container">
  <div class="">
    <div class="">
    <div>
      <h1>Créez une nouvelle réponse</h1>
    </div>
      <%= simple_form_for([interaction, option]) do |f| %>

        <div>
          <div class="">
            <%= f.input :title, label: 'Réponse', placeholder: "100% d'accord!" %>
          </div>
        </div>

        <div class="">
          <%= f.input :next_accroche, label: "Réponse directe associée" %>
        </div>

        <div class="">
          <%= f.input :position %>
        </div>
        <div class="">
          <%= f.button :submit, 'Ajouter!', class: 'btn btn-danger' %>
        </div>
      <% end %>
      <div>
        <span class="modal-close-option"><i class="fas fa-times"></i></span>

        <button onclick="toggle()">emoji</button>
        <div class="tooltip" role="tooltip">
          <emoji-picker></emoji-picker>
        </div>
        <script src="https://unpkg.com/@popperjs/core@2"></script>
        <script type="module" src="https://unpkg.com/emoji-picker-element@1"></script>
        <script>
          const button = document.querySelector('button')
          const tooltip = document.querySelector('.tooltip')
          Popper.createPopper(button, tooltip)

          function toggle() {
            tooltip.classList.toggle('shown')
          }
        </script>

      </div>
    </div>
  </div>
</div>
