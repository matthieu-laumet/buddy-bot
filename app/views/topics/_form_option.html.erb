<div class="modal-container">
  <div class="">
    <div class="">
    <div>
      <h1>Créez une nouvelle réponse</h1>
    </div>
      <%= simple_form_for([interaction, option]) do |f| %>

        <div>
          <div class="">
            <%= f.input :title, label: 'Réponse', placeholder: "100% d'accord!" %>
            <emoji-picker></emoji-picker>
          </div>
        </div>

        <div class="">
          <%= f.input :next_accroche, label: "Réponse directe associée" %>
        </div>

        <div class="">
          <%= f.input :position %>
        </div>
        <div class="">
          <%= f.button :submit, 'Ajouter!', class: 'btn btn-danger' %>
        </div>
        <script type="module">
          import 'https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js'
          import insertText from 'https://cdn.jsdelivr.net/npm/insert-text-at-cursor@0.3.0/index.js'

          document.querySelector('emoji-picker').addEventListener('emoji-click', e => {
          insertText(document.querySelector('input'), e.detail.unicode)
            // console.log(e.detail.unicode)
          })
        </script>
      <% end %>
      <div>
        <span class="modal-close-option"><i class="fas fa-times"></i></span>
      </div>
    </div>
  </div>
</div>
