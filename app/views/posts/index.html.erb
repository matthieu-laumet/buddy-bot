<div class="container-chat">
  <div class="side-bar">
    <div class="left-bar-text">
      <a href="#" class="btn btn-white btn-sm btn-bg-color">ML</a>
      <h3>SL</h3>
    </div>
  </div>

  <div class="converse-bar text-left px-3">
    <h2>Le Wagon</h2>
    <div class="person">
      <div class="online-badge"></div>
      <span>matt laumet</span>
    </div>
    <div class="converse-title">
      <h3>Channels</h3>
      <i class="fas fa-plus"></i>
    </div>
    <div class="converse-list">
      <div class="converse-channel">
        <p><i class="fab fa-slack-hash"></i> batch-733-bordeaux</p>
      </div>
      <div class="converse-channel">
        <p><i class="fab fa-slack-hash"></i> help</p>
      </div>
      <div class="converse-channel">
        <div class="converse-strong">
          <p><i class="fab fa-slack-hash"></i> Buddy</p>
        </div>
      </div>
      <div class="converse-channel">
        <p><i class="fas fa-lock"></i> fiday-drinks</p>
      </div>
      <div class="converse-channel">
        <p><i class="fas fa-lock"></i> climbing</p>
      </div>
    </div>
    <div class="converse-title">
      <h3>Direct Message</h3>
      <i class="fas fa-plus"></i>
    </div>
    <div class="person">
      <div class="online-badge"></div>
      <span>bertrand</span>
    </div>
    <div class="person">
      <div class="online-badge"></div>
      <span>Paul le Mercier</span>
    </div>
    <div class="person">
      <div class="offline-badge"></div>
      <span>Pilou</span>
    </div>
    <div class="person">
      <div class="offline-badge"></div>
      <span>Marceau</span>
    </div>
  </div>

  <div class="main-bar ml-3 mr-3 mt-3">
    <div class="header p-1 border-bottom">
      <%= image_tag 'slackbot_logo.png', class:'img-logo-slack mr-2'%><h2>Slackbot</h2>
    </div>
    <div class="messages">
      <div class="message d-flex justify-content-start text-left ml-2">
        <%= image_tag 'logo-Jam-bot-02.png', width:"50px", height:"45px", class:"rounded img-buddy" %>
          <div class="message-text ml-3 mt-1">
            <h4>Buddy</h4>
            <% @posts.each do |post| %>
              <% if post[0] %>
                <p><%= post.content %></p>
              <% else %>
                  <% if post.form == false %>
                    <p><%= post.content %></p>
                  <% else %>
                    <p><%= render 'form_options', interaction: post.interaction %></p>
                  <% end %>
              <% end %>
            <% end %>
          </div>
      </div>
      <%= render 'user_answer' %>
    </div>

    <div class="chat-bar">
      <form action>
        <input type="text" class="form-control" placeholder="Type your message...">
      </form>
    </div>
</div>
